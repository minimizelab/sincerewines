{
  "version": 2,
  "builds": [
    {
      "src": "www/package.json",
      "use": "@now/static-build"
    },
    {
      "src": "admin/package.json",
      "use": "@now/static-build"
    },
    {
      "src": "api/deploy.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "src": "^/api/deploy", "dest": "/api/deploy.ts" },
    { "src": "^/admin/static/(.*)", "dest": "/admin/static/$1" },
    { "src": "^/admin/(.*)", "dest": "/admin/index.html" },
    {
      "src": "/(.*)",
      "dest": "/www/$1"
    }
  ],
  "env": {
    "API_TOKEN": "@nowtoken"
  },
  "build": {
    "env": {
      "NPM_RC": "@npmrc"
    }
  }
}
